<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
    <head>
    	<%= stylesheet_link_tag 'admin/login.css'%>
        <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
    </head>
    <body>
        <%= error_messages_for :admin %>
        <div id="container">
            <div id="top">
                LOGO购物系统
            </div>
            <div id="content"> 
				<p>管理员登录--》》</p>               
	            <% form_tag "/admin/admin/login" do -%>
	            <table width="60%" align="center">                                
	                <tr height="30">
	                    <td align="center">
	                        <font color="red" size="2">
	                            <%= flash[:notice] %>
	                        </font>
	                    </td>
	                </tr>
	                <tr align="center" height="50" width="50%">
	                    <td align="center">账户名:<%= text_field_tag 'login' %></td>
	                </tr>                                
	                <tr align="center" height="50">
	                    <td align="center"> 密    码:<%= password_field_tag 'password',nil, :maxlength=>6 %></td>
	                </tr>                               
	                <tr height="15">
	                    <td align="center">
	                        <font size="2">
	                            <input type="checkbox" />
	                            <label onmouseover="document.getElementById('div1').style.display='block'";  onmouseout="document.getElementById('div1').style.display='none'";>
	自动登录
	                            </label>
	                        </font>
	                    </td>
	                </tr>
	                <tr height="50">
	                    <td align="center">
	                        <div id="div1">
	                            <font size="1" color="#FF9900">为了你的信息安全，请不要在网吧或公用电脑上使用此功能！</font>
	                        </div>
	                    </td>
	                </tr>
	                <tr align="center">
	                    <td>
	                        <%= image_submit_tag("2012-01-06_110856.png") %>
	                    </td>
	                </tr>
	                
	            </table>
	            <% end -%>
            </div>
            <div id="footer">
                &copy;版权所有 江西智科软件有限公司
            </div>
        </div>
       
    </body>
</html>
