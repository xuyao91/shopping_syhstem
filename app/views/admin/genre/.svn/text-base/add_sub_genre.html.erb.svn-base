<font size="5" color="blue">添加小分类</font>
<br/><br/>
<%= error_messages_for :sub_genre%>
<% form_tag "/admin/genre/create_sub_genre" do%>
<table width="100%" height="100%" >
	<tr>
		<td align="right">大分类</td>
		<td><%= select_tag "product[genre_id]",options_for_select(Genre.all.collect{|g| [g.name, g.id]})%></td>
	</tr>
	<tr>
		<td align="right">小分类</td>
		<td><%= text_field :sub_genre, :sub_name%></td>
	</tr>
	<tr>
		<td width="20%"></td>
		<td><%= image_submit_tag "submit.png"%></td>		
	</tr>
</table>
<%end%>
<br/>
<%= button_to "返回", :action => "index"%>