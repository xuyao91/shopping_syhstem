<table>
	<% form_tag "/user/edit_password" do %>
	<tr>
		<td>
			初始密码：
		</td>
		<td>
			<%= password_field_tag 'old_password' %>
		</td>
	</tr>
	<tr>
		<td>
			新密码：
		</td>
		<td>
			<%= password_field_tag 'new_password' %>
		</td>
	</tr>
	<tr>
		<td>
			确认密码：
		</td>
		<td>
			<%= password_field_tag 'new_password_confirm' %>
		</td>
	</tr>
	<tr>
		<td colspan="2">
			<%= submit_tag "确定修改" %>
		</td>
	</tr>
	<% end %>
</table>
